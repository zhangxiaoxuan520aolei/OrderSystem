<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#036">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="80%">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/regist_uname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_username"
                android:gravity="center_horizontal"
                android:hint="用户名"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/regist_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/regist_uname"
            android:layout_centerInParent="true">

            <EditText
                android:id="@+id/userpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_userpwd"
                android:gravity="center_horizontal"
                android:hint="密    码"
                android:inputType="textPassword"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/regist_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/regist_pwd"
            android:layout_centerInParent="true">

            <EditText
                android:id="@+id/userphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_phone"
                android:gravity="center_horizontal"
                android:hint="手机号"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/regist_dormitory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/regist_phone"
            android:layout_centerInParent="true">

            <EditText
                android:id="@+id/userdormitory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_dormitory"
                android:gravity="center_horizontal"
                android:hint="宿舍号"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/regist_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/regist_dormitory"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_style"
            android:text="注 册"
            android:textSize="20sp"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="50%" />

    </android.support.percent.PercentRelativeLayout>


</android.support.percent.PercentRelativeLayout>
